<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/introSliderTwo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/introSliderTwo"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:background="@color/introSliderTwo"
            android:src="@drawable/action_icon"   />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/introSliderTwo"
            android:text="@string/slideTwo_title"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/introSliderTwo"
            android:paddingLeft="@dimen/description_padding"
            android:paddingRight="@dimen/description_padding"
            android:text="@string/slideTwo_description"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_description"  />
    </LinearLayout>
</RelativeLayout>