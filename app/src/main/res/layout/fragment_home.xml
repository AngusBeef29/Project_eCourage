<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AppTheme"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clickable="true">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Get Support"
        android:id="@+id/getSupportButton"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:onClick="launchGetSupport"
        />
    <View android:layout_width="10dip" android:layout_height="10dip"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Breathing"
        android:id="@+id/breathingButton"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:onClick="launchBreathing"
        />

    <View android:layout_width="10dip" android:layout_height="10dip"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Lift Your Mood"
        android:id="@+id/liftYourMoodbutton"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:onClick="launchLiftYourMood"
        />



</LinearLayout>
