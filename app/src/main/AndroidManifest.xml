<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sfene_000.project_ecourage">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroSlidersActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".tools.breathingActivity.breathingActivityHome"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".tools.BeYourOwnFriend.BeYourOwnFriendSlidersActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".tools.BeYourOwnFriend.BeYourOwnFriendActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".tools.BeYourOwnFriend.BeYourOwnFriendSlidersActivity" />
        <activity
            android:name=".tools.BeYourOwnFriend.BeYourOwnFriendConfirmThoughtsActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".tools.BeYourOwnFriend.BeYourOwnFriendActivity" />

        <activity android:name=".tools.LiftYourMoodActivity" />
        <activity android:name=".tools.breathingActivity.breathingActivityInfo" />
        <activity android:name=".tools.breathingActivity.breathingActivity1" />
        <activity android:name=".tools.breathingActivity.breathingActivity2" />
        <activity android:name=".tools.breathingActivity.breathingActivity3" />
        <activity
            android:name=".tools.GetSupport"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>